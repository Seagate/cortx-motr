		deps=$$( \
			$(CPP) -MM -MG $(AM_CPPFLAGS) $$f \
			| tr ' ' \\n \
			| grep _xc \
			| grep -v $${f/%.h/_xc.h} \
			| sed -e 's#^$(abs_top_srcdir)/##' \
			| xargs echo \
		       ); \
		if [ -n "$$deps" ]; then \
			echo "$${f/%.h/_xc.h}: $$deps" >> $(XC_DEPS_FILE); \
			echo >> $(XC_DEPS_FILE); \
		fi \
	 done


.PHONY: generate-protocol-files
generate-protocol-files: xcode/protocol_checksum.h

xcode/protocol.txt: $(XC_FILES)
	@./xcode/proto -o $@

xcode/protocol.md5:  xcode/protocol.txt
	@md5sum $< | awk '{print $$1}' > $@

xcode/protocol-%.txt: $(XC_FILES)
	@./xcode/proto --$* -o $@

xcode/protocol-%.md5: xcode/protocol-%.txt
	@md5sum $< | awk '{print $$1}' > $@


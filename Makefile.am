	@sed -i -e "s/@BE_CHECKSUM@/$$(cat xcode/protocol-be.md5)/" $@
	@sed -i -e "s/@CONF_CHECKSUM@/$$(cat xcode/protocol-conf.md5)/" $@
	@sed -i -e "s/@RPC_CHECKSUM@/$$(cat xcode/protocol-rpc.md5)/" $@


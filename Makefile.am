xcode/protocol_checksum.h: xcode/protocol.md5 \
                           xcode/protocol-be.md5 \
                           xcode/protocol-conf.md5 \
                           xcode/protocol-rpc.md5 \
                           $(PROTOCOL_CHECKSUM_HEADER_TEMPLATE)
